<.header>
  Quiz <%= @quiz.id %>
  <:subtitle>This is a quiz record from your database.</:subtitle>
  <:actions>
    <.link href={~p"/quizzes/#{@quiz}/edit"}>
      <.button>Edit quiz</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Question"><%= @quiz.question %></:item>
  <:item title="Answer"><%= @quiz.answer %></:item>
  <:item title="Options"><%= @quiz.options %></:item>
</.list>

<.back navigate={~p"/quizzes"}>Back to quizzes</.back>
